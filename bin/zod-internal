#!/bin/sh

__zod_config() {
  [ -e "$proj/.zod/state" ] || touch -t 197001010000 "$proj/.zod/state"
  cat - "$proj/.zod/config" <<! 2>/dev/null
[parse]
htm,html
[parse_convert]
md  awk -f "$zod_lib/markdown.awk"
[ignore]
helpers.awk
*.partial
*.layout
*.meta
config
!
}

__zod_destination() {
  file="$1"
  # Find the target directory if one must be created
  subdir="${file%/*}"
  subdir="${subdir#$proj}"
  if [ "$subdir" ]; then
    destination="$target$subdir"
    mkdir -p "$destination"
  else
    # There is no directory to create in target,
    # i.e. file is in the root of the project
    destination="$target"
  fi
  echo $destination;
}
